package am;

import java.util.ArrayList;

public class Sub01 {
	public static void run() {
		ArrayList<Car> cars = new ArrayList<>();
		

		
		Car car1 = new Car("기아", "K7");
		car1.setColor("흰색");
		car1.setDistance(100000);
		car1.setDate("2022-07");
		cars.add(car1);
		for(Car car:cars) { //cars에서 한개씩 가져와서 car에 저장
			System.out.printf("%s\n%s\n%s\n%,d\n%d\n", 
					car.getCompany(), car.getModel(), car.getClass(), car.getDistance(), car.getDate());
			System.out.println("");
		}
		
	}

}


package am;

import java.util.ArrayList;
import java.util.Scanner;

public class Sub02 {
	public static void run() {
		
		boolean run = true;
		Scanner s = new Scanner(System.in);
		ArrayList<Juso> jusos = new ArrayList<>();
		
		
		while(run) {
			
			System.out.println("\nㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ");
			System.out.println("| 1. 주소등록 | 2. 주소조회 | 3. 주소목록 | 4. 주소삭제 | 0. 종료 |");
			System.out.println("ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ");
			System.out.print("메뉴를 선택하세요. -> ");
			String menu = s.nextLine();
			System.out.println("");
			
			switch(menu) {
			
			case "1" : //1. 주소 등록
				Juso juso = new Juso();
				System.out.print("이름을 입력하세요. -> ");
				String name = s.nextLine();
				juso.setName(name);
				
				System.out.print("번호를 입력하세요. -> ");
				String phone = s.nextLine();
				juso.setPhone(phone);
				
				System.out.print("주소를 입력하세요. -> ");
				String address = s.nextLine();
				juso.setAddress(address);
				jusos.add(juso);
				
				System.out.print(juso.toString() + "\n" + "등록 완료 !\n");
				System.out.println("등록된 주소 데이터 : " + jusos.size());
				break;
				
			case "2" :
				System.out.print("검색할 주소를 입력하세요. -> ");
				for(int i=0; i<jusos.size(); i++) {
					
				}
				break;
				
			case "3" : //3. 주소 목록
				for(Juso j:jusos) {
					System.out.printf("이름 : %s\n번호 : %s\n주소 : %s\n", j.getName(), j.getPhone(), j.getAddress());
				}
				System.out.println("등록된 주소 데이터 : " + jusos.size());
				
				break;
				
			case "4" :
				break;
				
			case "0" :
				System.out.println("프로그램을 종료합니다.");
				run = false;
				break;
				
			default :
				System.out.println("0~4번 메뉴를 선택하세요.");
				break;
				
			}//switch
			
		}//while

	}//run 
}//class

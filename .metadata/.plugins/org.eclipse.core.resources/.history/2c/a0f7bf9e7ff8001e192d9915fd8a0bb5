package am;

import java.util.*;

public class Sub01 {
	public static void run() {

      boolean run=true;
      Scanner scan=new Scanner(System.in);
      
      while(run) {
    	 System.out.println("\nㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ");
         System.out.println(" | 1. 차량 등록 | 2. 차량 조회 | 3.차량 목록 | 4. 차량 삭제 | 0. 종료 |");
		System.out.println("ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ");
		System.out.print("메뉴를 선택하세요. -> ");
         String menu=scan.nextLine();
         
         switch(menu) {
         
         case "1":
            break;
            
         case "2":
            break;
            
         case "3":
            break;
            
         case "4":
            break;
            
         case "0":
            System.out.println("프로그램을 종료합니다.");
            run=false;
            break;
            
         default:
            System.out.println("0~4메뉴를 선택하세요!");
         }
      }//while
   }//run
}


package am;

public class Score {
	
	//필드(속성)
	String name;
	int kor;
	int eng;
	int mat;
	
	//생성자
	public Score() {
		super();
		// TODO Auto-generated constructor stub
	}	
	
	public Score(String name, int kor, int eng, int mat) {
		super();
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
	}

	//메서드
	public int total() { //합계
		int total = kor + eng + mat;
		return total;
	}
	
	public double avg() { //평균
		int total = kor + eng + mat;
		double avg = total/3;
		return avg;
		//return (kor + eng + mat)/3.;
	}
	
	public void print() {
		System.out.printf("이름 : %s\n국어 성적 : %d\n영어 성적 : %d\n수학 성적 : %d\n성적 합계 : %d\n평균 : %.2f\n", 
				name, kor, eng, mat, total(), avg());
	}

}
